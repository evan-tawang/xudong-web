{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [true, "single"],
    "indent": [false, "spaces", 2],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "no-console": false,// console 检测
//    "no-multiple-empty-lines": [1, { "max": 1 }],//代码行
    "no-shadowed-variable": false
//    "no-shadowed-variable": [ // 定义名称检测
//      true,
//      {
//        "class": false,
//        "enums": false,
//        "function": false,
//        "interface": false,
//        "namespace": false,
//        "typeAlias": false,
//        "typeParameter": false
//      }
//    ]
  }
}
